        self.optimized_fusion = nn.Sequential(
            # First reduce the concatenated features
            nn.Conv2d(dim*4, dim*2, kernel_size=1),
            nn.BatchNorm2d(dim*2),
            nn.GELU(),
            # Then apply a more efficient transformation
            nn.Conv2d(dim*2, dim, kernel_size=1),
            nn.BatchNorm2d(dim)
        )